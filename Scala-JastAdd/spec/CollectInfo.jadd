	public void LExp.collectInfo(Collection c,InfoType cType){
		/*LExp:Expression 		::= LabelAST:Label Expression;*/
		getExpression().collectInfo(c,cType);
		switch (cType.getValue())
		{
			case 1:
			{
				c.addAll(this.killRD());
			}break;
			case 2:
